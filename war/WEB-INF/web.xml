<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <servlet>
    <servlet-name>ClaymusService</servlet-name>
    <servlet-class>com.claymus.service.server.ClaymusServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ClaymusService</servlet-name>
    <url-pattern>/service.claymus</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>PratilipiService</servlet-name>
    <servlet-class>com.pratilipi.service.server.PratilipiServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PratilipiService</servlet-name>
    <url-pattern>/service.pratilipi</url-pattern>
  </servlet-mapping>


  <!-- Handler for uploading and serving website resources -->

  <servlet>
    <servlet-name>BookCoverResourceServlet</servlet-name>
    <servlet-class>com.pratilipi.servlet.ResourceServlet</servlet-class>
    <init-param>
      <param-name>ResizeImage</param-name>
      <param-value>300</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>BookCoverResourceServlet</servlet-name>
    <url-pattern>/resource.book-cover/original/*</url-pattern>
    <url-pattern>/resource.poem-cover/original/*</url-pattern>
    <url-pattern>/resource.story-cover/original/*</url-pattern>
    <url-pattern>/resource.article-cover/original/*</url-pattern>
  </servlet-mapping>
   
  <servlet>
    <servlet-name>AuthorImageResourceServlet</servlet-name>
    <servlet-class>com.claymus.servlet.ResourceServlet</servlet-class>
    <init-param>
      <param-name>ResizeImage</param-name>
      <param-value>300</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthorImageResourceServlet</servlet-name>
    <url-pattern>/resource.author-image/original/*</url-pattern>
  </servlet-mapping>
   
  <servlet>
    <servlet-name>WordContentResourceServlet</servlet-name>
    <servlet-class>com.pratilipi.servlet.ResourceServlet</servlet-class>
    <init-param>
      <param-name>ResourceServletType</param-name>
      <param-value>UPLOAD_ONLY</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>WordContentResourceServlet</servlet-name>
    <url-pattern>/resource.book-content/word/*</url-pattern>
    <url-pattern>/resource.poem-content/word/*</url-pattern>
    <url-pattern>/resource.story-content/word/*</url-pattern>
    <url-pattern>/resource.article-content/word/*</url-pattern>
  </servlet-mapping>
   
  <servlet>
    <servlet-name>HtmlContentResourceServlet</servlet-name>
    <servlet-class>com.pratilipi.servlet.ResourceServlet</servlet-class>
    <init-param>
      <param-name>ResourceServletType</param-name>
      <param-value>UPLOAD_ONLY</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>WordContentResourceServlet</servlet-name>
    <url-pattern>/resource.book-content/html/*</url-pattern>
    <url-pattern>/resource.poem-content/html/*</url-pattern>
    <url-pattern>/resource.story-content/html/*</url-pattern>
    <url-pattern>/resource.article-content/html/*</url-pattern>
  </servlet-mapping>
   
  <servlet>
    <servlet-name>JpegContentResourceServlet</servlet-name>
    <servlet-class>com.claymus.servlet.ResourceServlet</servlet-class>
    <init-param>
      <param-name>ResourceServletType</param-name>
      <param-value>DOWNLOAD_ONLY</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>JpegContentResourceServlet</servlet-name>
    <url-pattern>/resource.book-content/jpeg/*</url-pattern>
    <url-pattern>/resource.poem-content/jpeg/*</url-pattern>
    <url-pattern>/resource.story-content/jpeg/*</url-pattern>
    <url-pattern>/resource.article-content/jpeg/*</url-pattern>
  </servlet-mapping>
  
   
  <!-- Handlers for Task Queues -->
  
  <servlet>
    <servlet-name>QueueInviteUserServlet</servlet-name>
    <servlet-class>com.claymus.servlet.QueueInviteUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>QueueInviteUserServlet</servlet-name>
    <url-pattern>/_ah/queue/invite-user</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>QueueWelcomeUserServlet</servlet-name>
    <servlet-class>com.claymus.servlet.QueueWelcomeUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>QueueWelcomeUserServlet</servlet-name>
    <url-pattern>/_ah/queue/welcome-user</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>QueuePasswordResetServlet</servlet-name>
    <servlet-class>com.claymus.servlet.QueuePasswordResetServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>QueuePasswordResetServlet</servlet-name>
    <url-pattern>/_ah/queue/reset-password</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>QueueHtmlToPratilipiServlet</servlet-name>
    <servlet-class>com.pratilipi.servlet.QueueHtmlToPratilipiServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>QueueHtmlToPratilipiServlet</servlet-name>
    <url-pattern>/_ah/queue/html-to-pratilipi</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>QueueWordToPratilipiServlet</servlet-name>
    <servlet-class>com.pratilipi.servlet.QueueWordToPratilipiServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>QueueWordToPratilipiServlet</servlet-name>
    <url-pattern>/_ah/queue/word-to-pratilipi</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>PratilipiMain</servlet-name>
    <servlet-class>com.pratilipi.servlet.PratilipiMain</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PratilipiMain</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
   
  
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>admin</web-resource-name>
      <url-pattern>/_ah/queue/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>
    
</web-app>
